{
  "name": "agency-ops",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "workers/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@agency-ops/web",
    "dev:worker": "turbo run dev --filter=@agency-ops/job-runner",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:migrate": "npx supabase db push",
    "db:reset": "npx supabase db reset",
    "db:types": "npx supabase gen types typescript --local > packages/shared/src/types/database.ts"
  },
  "devDependencies": {
    "turbo": "^2"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "npm@10.9.2"
}
